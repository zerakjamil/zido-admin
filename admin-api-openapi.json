{
  "openapi": "3.0.3",
  "info": { "title": "ZidoBid Admin API", "version": "0.1.0-local" },
  "servers": [{ "url": "/" }],
  "paths": {
    "/v1/admin/profile": {
      "get": {
        "operationId": "getAdminProfile",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Admin" } }
            }
          }
        }
      }
    },
    "/v1/admin/login": {
      "post": {
        "operationId": "adminLogin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/LoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/LoginResponse" } }
            }
          }
        }
      }
    },
    "/v1/logout": {
      "post": { "operationId": "adminLogout", "responses": { "204": { "description": "No Content" } } }
    },

    "/v1/admin/dashboard": {
      "get": {
        "operationId": "getDashboardStats",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/DashboardStats" } }
            }
          }
        }
      }
    },

    "/v1/admin/users": {
      "get": {
        "operationId": "getAdminUsers",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "status", "schema": { "type": "string", "enum": ["active", "suspended", "banned"] } },
          { "in": "query", "name": "sort_by", "schema": { "type": "string", "default": "created_at" } },
          { "in": "query", "name": "sort_direction", "schema": { "type": "string", "enum": ["asc", "desc"], "default": "desc" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/UsersPaginatedResponse" } }
            }
          }
        }
      }
    },
    "/v1/admin/users/{id}": {
      "get": {
        "operationId": "getAdminUser",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserResponse" } } } }
        }
      },
      "put": {
        "operationId": "updateAdminUser",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdateUserRequest" } } } },
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserResponse" } } } }
        }
      },
      "delete": {
        "operationId": "deleteAdminUser",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/v1/admin/users/{id}/suspend": {
      "post": {
        "operationId": "suspendAdminUser",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuspendUserRequest" } } } },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/v1/admin/users/{id}/unsuspend": {
      "post": {
        "operationId": "unsuspendAdminUser",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },

    "/v1/admin/auction-items": {
      "get": {
        "operationId": "getAdminAuctionItems",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "status", "schema": { "type": "string", "enum": ["draft", "active", "ended", "cancelled"] } },
          { "in": "query", "name": "category_id", "schema": { "type": "integer" } },
          { "in": "query", "name": "sort_by", "schema": { "type": "string", "default": "created_at" } },
          { "in": "query", "name": "sort_direction", "schema": { "type": "string", "enum": ["asc", "desc"], "default": "desc" } }
        ],
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuctionItemsPaginatedResponse" } } } }
        }
      },
      "post": {
        "operationId": "createAdminAuctionItem",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateAuctionItemRequest" } } } },
        "responses": {
          "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuctionItemResponse" } } } }
        }
      }
    },
    "/v1/admin/auction-items/{id}": {
      "get": {
        "operationId": "getAdminAuctionItem",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuctionItemResponse" } } } } }
      },
      "put": {
        "operationId": "updateAdminAuctionItem",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdateAuctionItemRequest" } } } },
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuctionItemResponse" } } } } }
      },
      "delete": {
        "operationId": "deleteAdminAuctionItem",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/v1/admin/auction-items/{id}/force-end": {
      "post": {
        "operationId": "forceEndAdminAuctionItem",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "400": { "description": "Only active auctions can be force ended" } }
      }
    },

    "/v1/admin/categories": {
      "get": {
        "operationId": "getAdminCategories",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "status", "schema": { "type": "string", "enum": ["active", "inactive"] } },
          { "in": "query", "name": "parent_id", "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoriesPaginatedResponse" } } } } }
      },
      "post": {
        "operationId": "createAdminCategory",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateCategoryRequest" } } } },
        "responses": { "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } } }
      }
    },
    "/v1/admin/categories/{id}": {
      "get": {
        "operationId": "getAdminCategory",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } } }
      },
      "put": {
        "operationId": "updateAdminCategory",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdateCategoryRequest" } } } },
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } } }
      },
      "delete": {
        "operationId": "deleteAdminCategory",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "204": { "description": "No Content" } }
      }
    },

    "/v1/admin/promotional-banners": {
      "get": {
        "operationId": "getAdminPromotionalBanners",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "position", "schema": { "type": "string" } },
          { "in": "query", "name": "status", "schema": { "type": "string", "enum": ["active", "inactive"] } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PromotionalBannersPaginatedResponse" } } } } }
      },
      "post": {
        "operationId": "createAdminPromotionalBanner",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreatePromotionalBannerRequest" } } } },
        "responses": { "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PromotionalBannerResponse" } } } } }
      }
    },
    "/v1/admin/promotional-banners/{id}": {
      "get": {
        "operationId": "getAdminPromotionalBanner",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PromotionalBannerResponse" } } } } }
      },
      "put": {
        "operationId": "updateAdminPromotionalBanner",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreatePromotionalBannerRequest" } } } },
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PromotionalBannerResponse" } } } } }
      },
      "delete": {
        "operationId": "deleteAdminPromotionalBanner",
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "204": { "description": "No Content" } }
      }
    },
    "/v1/admin/promotional-banners/reorder": {
      "post": {
        "operationId": "reorderAdminPromotionalBanners",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ReorderPromotionalBannersRequest" } } }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },

    "/v1/admin/bids": {
      "get": {
        "operationId": "getAdminBids",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "auction_item_id", "schema": { "type": "integer" } },
          { "in": "query", "name": "bidder_id", "schema": { "type": "integer" } },
          { "in": "query", "name": "start_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "end_date", "schema": { "type": "string", "format": "date-time" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/BidsPaginatedResponse" } } } } }
      }
    },

    "/v1/admin/reports/revenue": {
      "get": {
        "operationId": "getAdminRevenueReport",
        "parameters": [
          { "in": "query", "name": "start_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "end_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "period", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RevenueReport" } } } } }
      }
    },
    "/v1/admin/reports/user-activity": {
      "get": {
        "operationId": "getAdminUserActivityReport",
        "parameters": [
          { "in": "query", "name": "start_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "end_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "period", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserActivityReport" } } } } }
      }
    },

    "/v1/admin/ended-items": {
      "get": {
        "operationId": "getAdminEndedItems",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "default": 10 } },
          { "in": "query", "name": "has_winner", "schema": { "type": "boolean" } },
          { "in": "query", "name": "start_date", "schema": { "type": "string", "format": "date-time" } },
          { "in": "query", "name": "end_date", "schema": { "type": "string", "format": "date-time" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuctionItemsPaginatedResponse" } } } } }
      }
    }
  },
  "components": {
    "schemas": {
      "Admin": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" },
          "permissions": { "type": "array", "items": { "type": "string" } },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "email", "role", "permissions", "created_at", "updated_at"]
      },
      "LoginRequest": {
        "type": "object",
        "properties": { "email": { "type": "string" }, "password": { "type": "string" } },
        "required": ["email", "password"]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "admin": { "$ref": "#/components/schemas/Admin" },
          "token": { "type": "string" },
          "expires_at": { "type": "string", "format": "date-time" }
        },
        "required": ["admin", "token"]
      },

      "PaginationMeta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "last_page": { "type": "integer" },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" },
          "from": { "type": "integer", "nullable": true },
          "to": { "type": "integer", "nullable": true }
        }
      },
      "PaginationLinks": {
        "type": "object",
        "properties": {
          "first": { "type": "string" },
          "last": { "type": "string" },
          "prev": { "type": "string", "nullable": true },
          "next": { "type": "string", "nullable": true }
        }
      },

      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "email_verified_at": { "type": "string", "format": "date-time", "nullable": true },
          "phone": { "type": "string", "nullable": true },
          "profile_image": { "type": "string", "nullable": true },
          "status": { "type": "string", "enum": ["active", "suspended", "banned"] },
          "suspension_reason": { "type": "string", "nullable": true },
          "suspension_until": { "type": "string", "format": "date-time", "nullable": true },
          "total_auctions": { "type": "integer" },
          "total_bids": { "type": "integer" },
          "total_winnings": { "type": "number" },
          "registration_date": { "type": "string", "format": "date-time" },
          "last_login": { "type": "string", "format": "date-time" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": [
          "id",
          "name",
          "email",
          "status",
          "total_auctions",
          "total_bids",
          "total_winnings",
          "created_at",
          "updated_at"
        ]
      },
      "UserResponse": {
        "type": "object",
        "properties": { "data": { "$ref": "#/components/schemas/User" } }
      },
      "UsersPaginatedResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/User" } },
          "meta": { "$ref": "#/components/schemas/PaginationMeta" },
          "links": { "$ref": "#/components/schemas/PaginationLinks" }
        }
      },
      "UpdateUserRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "phone": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "suspended", "banned"] }
        }
      },
      "SuspendUserRequest": {
        "type": "object",
        "properties": {
          "reason": { "type": "string" },
          "duration": { "type": "integer", "description": "in days" },
          "until": { "type": "string", "format": "date-time" }
        },
        "required": ["reason"]
      },

      "Category": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string", "nullable": true },
          "slug": { "type": "string" },
          "image": { "type": "string", "nullable": true },
          "parent_id": { "type": "integer", "nullable": true },
          "status": { "type": "string", "enum": ["active", "inactive"] },
          "sort_order": { "type": "integer" },
          "auction_items_count": { "type": "integer" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "slug", "status", "sort_order", "created_at", "updated_at"]
      },
      "CreateCategoryRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "parent_id": { "type": "integer" },
          "image": { "type": "string" },
          "sort_order": { "type": "integer" }
        },
        "required": ["name"]
      },
      "UpdateCategoryRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "parent_id": { "type": "integer" },
          "image": { "type": "string" },
          "sort_order": { "type": "integer" },
          "status": { "type": "string", "enum": ["active", "inactive"] }
        }
      },
      "CategoryResponse": {
        "type": "object",
        "properties": { "data": { "$ref": "#/components/schemas/Category" } }
      },
      "CategoriesPaginatedResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/Category" } },
          "meta": { "$ref": "#/components/schemas/PaginationMeta" },
          "links": { "$ref": "#/components/schemas/PaginationLinks" }
        }
      },

      "AuctionItem": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "starting_price": { "type": "number" },
          "current_price": { "type": "number" },
          "buyout_price": { "type": "number", "nullable": true },
          "reserve_price": { "type": "number", "nullable": true },
          "increment_amount": { "type": "number" },
          "start_time": { "type": "string", "format": "date-time" },
          "end_time": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["draft", "active", "ended", "cancelled"] },
          "is_featured": { "type": "boolean" },
          "condition": { "type": "string" },
          "brand": { "type": "string", "nullable": true },
          "model": { "type": "string", "nullable": true },
          "year": { "type": "integer", "nullable": true },
          "color": { "type": "string", "nullable": true },
          "location": { "type": "string", "nullable": true },
          "shipping_info": { "type": "string", "nullable": true },
          "return_policy": { "type": "string", "nullable": true },
          "images": { "type": "array", "items": { "type": "string" } },
          "video_url": { "type": "string", "nullable": true },
          "total_bids": { "type": "integer" },
          "highest_bid": { "type": "number", "nullable": true },
          "category": { "$ref": "#/components/schemas/Category" },
          "seller": { "$ref": "#/components/schemas/User" },
          "winner": { "$ref": "#/components/schemas/User" },
          "item_code": { "type": "string" },
          "retail_price": { "type": "integer", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "AuctionItemResponse": {
        "type": "object",
        "properties": { "data": { "$ref": "#/components/schemas/AuctionItem" } }
      },
      "AuctionItemsPaginatedResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/AuctionItem" } },
          "meta": { "$ref": "#/components/schemas/PaginationMeta" },
          "links": { "$ref": "#/components/schemas/PaginationLinks" }
        }
      },
      "CreateAuctionItemRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "category_id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "starting_price": { "type": "number" },
          "reserve_price": { "type": "number", "nullable": true },
          "buyout_price": { "type": "number", "nullable": true },
          "increment_amount": { "type": "number" },
